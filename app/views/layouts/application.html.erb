<!DOCTYPE html>
<html>
  <head>
    <title>Davestagram</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <% if current_user %>
        <li style="float:right"><%= link_to 'Log Out',  destroy_user_session_path, method: :delete %></li>
      <% end %>
      <% if !current_user %>
        <li style="float:right"><a href="/users/sign_in">Log In</a></li>
        <li style="float:right"><a href="/users/sign_up">Sign Up</a></li>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
